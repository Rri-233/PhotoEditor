<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="Widget.PhotoEditor.ButtonBase" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
		<item name="android:minHeight">36dp</item>
		<item name="android:textAllCaps">false</item>
		<item name="android:gravity">center</item>
		<item name="android:paddingStart">12dp</item>
		<item name="android:paddingEnd">12dp</item>
	</style>

	<style name="Widget.PhotoEditor.CropButton" parent="Widget.PhotoEditor.ButtonBase">
		<item name="android:layout_width">70dp</item>
		<item name="android:layout_height">40dp</item>
		<item name="android:textSize">12sp</item>
		<item name="android:padding">4dp</item>
	</style>

	<style name="Widget.PhotoEditor.FilterButton" parent="Widget.PhotoEditor.ButtonBase">
		<item name="android:layout_width">80dp</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">12sp</item>
	</style>

	<style name="Widget.PhotoEditor.PanelActionButton" parent="Widget.PhotoEditor.ButtonBase">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_weight">1</item>
		<item name="android:maxLines">1</item>
	</style>

	<style name="Widget.PhotoEditor.ToolButton" parent="Widget.PhotoEditor.ButtonBase">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">14sp</item>
	</style>

</resources>
