<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.editor.EditorFragment">

    <!-- 画布铺满整个区域，作为底层 -->
    <com.jerry.photoeditor.ui.editor.EditorCanvasView
        android:id="@+id/editor_canvas_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 文字图层容器 -->
    <FrameLayout
        android:id="@+id/text_overlay_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 顶部导航栏：主模式 -->
    <LinearLayout
        android:id="@+id/editor_top_bar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="8dp"
        android:background="@color/editor_top_bar_bg"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btn_close"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:src="@drawable/ic_close"
            app:tint="@color/editor_icon_tint"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="关闭" />

        <TextView
            android:id="@+id/tv_editor_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="图片编辑"
            android:textColor="@color/editor_icon_tint"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btn_toggle_theme"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:src="@drawable/ic_moon"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="切换主题" />

        <ImageButton
            android:id="@+id/btn_share"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@drawable/ic_share"
            app:tint="@color/editor_icon_tint"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="分享" />

        <ImageButton
            android:id="@+id/btn_export"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@drawable/ic_save"
            app:tint="@color/editor_icon_tint"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="保存" />
    </LinearLayout>

    <!-- 顶部导航栏：编辑模式（默认隐藏） -->
    <LinearLayout
        android:id="@+id/editor_top_bar_edit_mode"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="8dp"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btn_edit_cancel"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:src="@drawable/ic_close"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@android:color/white"
            android:contentDescription="取消" />

        <TextView
            android:id="@+id/tv_edit_mode_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="编辑中"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btn_edit_confirm"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:src="@drawable/ic_save"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@android:color/white"
            android:contentDescription="确定" />
    </LinearLayout>

    <!-- 亮度对比度调节面板 -->
    <LinearLayout
        android:id="@+id/panel_adjust"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="?attr/colorSurface"
        android:elevation="4dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="亮度"
            android:textSize="14sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-100"
                android:textSize="12sp" />

            <SeekBar
                android:id="@+id/seek_brightness"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="8dp"
                android:max="200"
                android:progress="100" />

            <TextView
                android:id="@+id/tv_brightness_value"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="12sp"
                android:gravity="end" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="对比度"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-50"
                android:textSize="12sp" />

            <SeekBar
                android:id="@+id/seek_contrast"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="8dp"
                android:max="200"
                android:progress="50" />

            <TextView
                android:id="@+id/tv_contrast_value"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="12sp"
                android:gravity="end" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_adjust_reset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="重置"
            android:layout_marginTop="16dp"
            style="?attr/materialButtonOutlinedStyle" />
    </LinearLayout>

    <!-- 裁剪选项面板 -->
    <LinearLayout
        android:id="@+id/panel_crop"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="?attr/colorSurface"
        android:elevation="4dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择裁剪比例"
            android:textSize="14sp"
            android:textStyle="bold" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_crop_free"
                    style="@style/Widget.PhotoEditor.CropButton"
                    android:text="自由" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_crop_1_1"
                    style="@style/Widget.PhotoEditor.CropButton"
                    android:text="1:1"
                    android:layout_marginStart="6dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_crop_4_3"
                    style="@style/Widget.PhotoEditor.CropButton"
                    android:text="4:3"
                    android:layout_marginStart="6dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_crop_16_9"
                    style="@style/Widget.PhotoEditor.CropButton"
                    android:text="16:9"
                    android:layout_marginStart="6dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_crop_3_4"
                    style="@style/Widget.PhotoEditor.CropButton"
                    android:text="3:4"
                    android:layout_marginStart="6dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_crop_9_16"
                    style="@style/Widget.PhotoEditor.CropButton"
                    android:text="9:16"
                    android:layout_marginStart="6dp" />
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <!-- 旋转选项面板 -->
    <LinearLayout
        android:id="@+id/panel_rotate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center"
        android:background="?attr/colorSurface"
        android:elevation="4dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_rotate_left"
            style="@style/Widget.PhotoEditor.PanelActionButton"
            android:text="逆90°" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_rotate_right"
            style="@style/Widget.PhotoEditor.PanelActionButton"
            android:text="顺90°"
            android:layout_marginStart="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_rotate_180"
            style="@style/Widget.PhotoEditor.PanelActionButton"
            android:text="180°"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- 翻转选项面板 -->
    <LinearLayout
        android:id="@+id/panel_flip"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center"
        android:background="?attr/colorSurface"
        android:elevation="4dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_flip_horizontal"
            style="@style/Widget.PhotoEditor.PanelActionButton"
            android:text="水平翻转" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_flip_vertical"
            style="@style/Widget.PhotoEditor.PanelActionButton"
            android:text="垂直翻转"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- 文本编辑面板（旧方案，已弃用，保留 TextEditorFragment 作为唯一文字入口）
    
    <LinearLayout
        android:id="@+id/panel_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/colorSurface"
        android:elevation="4dp"
        android:visibility="gone"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        [这里原本有：添加文字按钮 / 字体选择 / 字号滑杆 / 颜色选择 / 透明度调节]

    </LinearLayout>
    -->

    <!-- 滤镜选项面板 -->
    <LinearLayout
        android:id="@+id/panel_filter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/colorSurface"
        android:elevation="4dp"
        android:visibility="gone"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- 滤镜强度调节 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="强度:"
                android:textSize="14sp" />

            <SeekBar
                android:id="@+id/seek_filter_intensity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:max="100"
                android:progress="100" />

            <TextView
                android:id="@+id/tv_filter_intensity_value"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="100%"
                android:textSize="14sp"
                android:gravity="end" />
        </LinearLayout>

        <!-- 滤镜按钮横向滚动 -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_filter_original"
                    style="@style/Widget.PhotoEditor.FilterButton"
                    android:text="原图" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_filter_bw"
                    style="@style/Widget.PhotoEditor.FilterButton"
                    android:text="黑白"
                    android:layout_marginStart="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_filter_retro"
                    style="@style/Widget.PhotoEditor.FilterButton"
                    android:text="复古"
                    android:layout_marginStart="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_filter_fresh"
                    style="@style/Widget.PhotoEditor.FilterButton"
                    android:text="清新"
                    android:layout_marginStart="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_filter_warm"
                    style="@style/Widget.PhotoEditor.FilterButton"
                    android:text="暖调"
                    android:layout_marginStart="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_filter_cool"
                    style="@style/Widget.PhotoEditor.FilterButton"
                    android:text="冷调"
                    android:layout_marginStart="8dp" />
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <!-- 底部：编辑功能导航条，也覆盖在画布之上 -->
    <HorizontalScrollView
        android:id="@+id/editor_bottom_tools"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/colorSurface"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_tool_crop"
                style="@style/Widget.PhotoEditor.ToolButton"
                android:text="裁剪" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_tool_rotate"
                style="@style/Widget.PhotoEditor.ToolButton"
                android:text="旋转"
                android:layout_marginStart="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_tool_flip"
                style="@style/Widget.PhotoEditor.ToolButton"
                android:text="翻转"
                android:layout_marginStart="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_tool_adjust"
                style="@style/Widget.PhotoEditor.ToolButton"
                android:text="亮度/对比度"
                android:layout_marginStart="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_tool_filter"
                style="@style/Widget.PhotoEditor.ToolButton"
                android:text="滤镜"
                android:layout_marginStart="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_tool_text"
                style="@style/Widget.PhotoEditor.ToolButton"
                android:text="文字"
                android:layout_marginStart="8dp" />

        </LinearLayout>
    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
