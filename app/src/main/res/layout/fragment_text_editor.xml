<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurfaceContainerLow">


    <!-- 顶部导航栏：文字编辑模式（风格与 EditorFragment 编辑模式一致） -->
    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="8dp"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btn_text_edit_cancel"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:src="@drawable/ic_close"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@android:color/white"
            android:contentDescription="取消" />

        <TextView
            android:id="@+id/tv_text_edit_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="文字编辑"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btn_text_edit_confirm"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:src="@drawable/ic_save"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@android:color/white"
            android:contentDescription="完成" />

    </LinearLayout>

    <!-- 文本编辑区域 (类似StickerView) -->
    <FrameLayout
        android:id="@+id/text_edit_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipChildren="false"
        android:clipToPadding="false"
    app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toTopOf="@id/bottom_panel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        
        <!-- 背景图片 -->
        <ImageView
            android:id="@+id/image_preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter" />
        
        <!-- 文本图层容器 -->
        <FrameLayout
            android:id="@+id/text_sticker_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:clipToPadding="false" />
            
    </FrameLayout>

    <!-- 底部工具栏 -->
    <LinearLayout
        android:id="@+id/bottom_panel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="160dp"
        android:orientation="vertical"
        android:background="@color/editor_panel_bg"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        
        <!-- 顶部分割线 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/colorOutlineVariant" />
        
        <!-- 添加文本按钮区域 - 更显眼 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingVertical="16dp"
            android:paddingHorizontal="16dp">
            
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_add_text"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="添加文字"
                android:textSize="16sp"
                android:textColor="?attr/colorOnPrimary"
                app:icon="@drawable/ic_add"
                app:iconGravity="textStart"
                app:iconSize="24dp"
                app:iconTint="?attr/colorOnPrimary"
                app:cornerRadius="24dp"
                style="@style/Widget.Material3.Button" />
                
        </LinearLayout>
        
        <!-- 文本样式调整区域 -->
        <LinearLayout
            android:id="@+id/text_style_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="120dp"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:visibility="gone">
            
            <!-- 字体选择 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">
                
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="字体"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurface" />
                    
                <Spinner
                    android:id="@+id/spinner_font"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1" />
                    
            </LinearLayout>
            
            <!-- 颜色选择 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">
                
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="颜色"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurface" />
                    
                <HorizontalScrollView
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:scrollbars="none">
                    
                    <LinearLayout
                        android:id="@+id/color_container"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical" />
                        
                </HorizontalScrollView>
                
            </LinearLayout>
            
            <!-- 字号调整 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="字号"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurface" />
                    
                <SeekBar
                    android:id="@+id/seek_text_size"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="108"
                    android:progress="12" />
                    
                <TextView
                    android:id="@+id/tv_text_size"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="24sp"
                    android:textSize="13sp"
                    android:textColor="?attr/colorOnSurfaceVariant" />
                    
            </LinearLayout>
            
        </LinearLayout>
        
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
